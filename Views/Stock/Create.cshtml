@model VoorraadSysteem.ViewModels.CreateUserViewModel

@{
	ViewData["Title"] = "Nieuwe gebruiker aanmaken";
}

<h1>Aanmaken</h1>
<h4>Gebruiker</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label">Naam</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label">Wachtwoord</label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SelectedRoles" class="control-label">Permissie</label>
				<select asp-for="SelectedRoles" class="form-control" id="permission.id">
				@foreach (var role in Model.Roles)
				{
						<option value="@role">@role</option>
				}
				</select>
				<span asp-validation-for="SelectedRoles" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Ga terug naar de lijst</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}