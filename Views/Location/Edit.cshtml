@model VoorraadSysteem.ViewModels.EditLocationViewModel

@{
	ViewData["Title"] = "Locatie aanpassen";
}

<h1>Locatie aanpassen</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<input type="hidden" asp-for="Id" />
			</div>
			<div class="form-group">
				<label asp-for="Name" class="control-label">Naam</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>			
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Ga terug naar de lijst</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}